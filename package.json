{
  "name": "simplytodo",
  "displayName": "SimplyTodo",
  "description": "A simple todo list to manage your todos in VSCode",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.104.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Raymond0212/SimplyTodo.git"
  },
  "publisher": "RuaMond",
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "simplytodo.refreshList",
        "title": "Todo: Refresh Todo List",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "simplytodo.refreshDetail",
        "title": "Todo: Refresh Todo Detail",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "simplytodo.createTodo",
        "title": "Todo: Create a Todo",
        "icon": "$(add)"
      },
      {
        "command": "simplytodo.createRootTodo",
        "title": "Todo: Create a Todo",
        "icon": "$(add)"
      },
      {
        "command": "simplytodo.deleteTodo",
        "title": "Todo: Delete Todo",
        "icon": "$(trash)"
      },
      {
        "command": "simplytodo.deleteCheckedTodo",
        "title": "Todo: Delete All Checked Todo",
        "icon": "$(trash)"
      },
      {
        "command": "simplytodo.showTodoDetail",
        "title": "Todo: Show Todo Detail"
      },
      {
        "command": "simplytodo.editItem",
        "title": "Todo: Edit Current Item",
        "icon": "$(edit)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todo-list-container",
          "title": "Todo List",
          "icon": "$(tasklist)"
        }
      ]
    },
    "views": {
      "todo-list-container": [
        {
          "id": "simplytodo.todoListView",
          "name": "Todos",
          "type": "tree",
          "visibility": "visible",
          "icon": "$(tasklist)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "simplytodo.todoListView",
        "contents": "[Create a Todo](command:simplytodo.createTodo)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "simplytodo.deleteTodo",
          "when": "false"
        },
        {
          "command": "simplytodo.createTodo",
          "when": "false"
        },
        {
          "command": "simplytodo.refreshList",
          "when": "false"
        },
        {
          "command": "simplytodo.refreshDetail",
          "when": "false"
        },
        {
          "command": "simplytodo.showTodoDetail",
          "when": "false"
        },
        {
          "command": "simplytodo.editItem",
          "when": "false"
        },
        {
          "command": "simplytodo.deleteCheckedTodo"
        },
        {
          "command": "simplytodo.createRootTodo"
        }
      ],
      "view/title": [
        {
          "command": "simplytodo.refreshList",
          "title": "Refresh",
          "group": "navigation",
          "when": "view == simplytodo.todoListView"
        },
        {
          "command": "simplytodo.createRootTodo",
          "title": "Todo: Create a Todo",
          "group": "navigation@1",
          "when": "view == simplytodo.todoListView"
        },
        {
          "command": "simplytodo.deleteCheckedTodo",
          "title": "Todo: Delete All Checked Todo",
          "group": "navigation@1",
          "when": "view == simplytodo.todoListView"
        },
        {
          "command": "simplytodo.refreshDetail",
          "title": "Todo: Refresh Detail",
          "group": "navigation@1",
          "when": "view == simplytodo.todoDetailView && viewItem == true"
        }
      ],
      "view/item/context": [
        {
          "command": "simplytodo.createTodo",
          "title": "Todo: Create a Sub Todo",
          "group": "inline"
        },
        {
          "command": "simplytodo.deleteTodo",
          "title": "Todo: Delete Todo",
          "group": "inline"
        },
        {
          "command": "simplytodo.editItem",
          "title": "Todo: Edit Item",
          "icon": "$(edit)",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^9.0.8",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@vscode-elements/elements": "^2.3.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "uuid": "^9.0.0"
  }
}